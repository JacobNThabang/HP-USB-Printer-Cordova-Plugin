<?xml version='1.0' encoding='utf-8'?>
<plugin id="hp-usb-printer-cordova" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>HPUSBPrinter</name>

    <description>Android HP USB Printer Plugin</description>
    <license>Apache 2.0</license>
    <keywords>android, hp-usb-printer</keywords>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <js-module name="HPUSBPrinter" src="www/HPUSBPrinter.js">
        <clobbers target="HPUSBPrinter" />
    </js-module>

    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="HPUSBPrinter">
                <param name="android-package" value="com.jacob.HPUSBPrinter" />
            </feature>
        </config-file>

        <source-file src="src/android/HPUSBPrinter.java" target-dir="src/com/jacob/cordova-hp-usb-printer" />
        <lib-file src="src/libs/jpos.jar" arch="device" />
    </platform>
</plugin>